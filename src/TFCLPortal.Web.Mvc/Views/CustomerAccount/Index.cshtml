@using TFCLPortal.Web.Startup
@model List<TFCLPortal.CustomerAccounts.Dto.CustomerAccountListDto>

@{
    ViewBag.CurrentPageName = "Customer Accounts"; // The menu item will be active for this page.
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<!-- ### $App Screen Content ### -->
<main class='main-content bgc-grey-100' style="padding-top:50px">
    <div class="row page-title">
        <div class="col-md-6 text-left">
            <h4 class="page-title-text">
                Customer Accounts
            </h4>
            <h6 class="page-title-breadcrumbs">
                <a href="~/Dashboard/Dashboard">Home</a> > Customer Accounts > Customer Accounts List
            </h6>
        </div>
        <div class="col-md-6 text-right">
            @*<button class="btn btn-sm btn-outline-success" onclick="$('#filterForm').toggle();"><i class="fa fa-filter"></i> Filter Records</button>*@
            <a href="~/Dashboard/Dashboard" class="btn btn-sm btn-outline-success bg1 eft-1" title="Back"><i class="fa fa-angle-double-left"></i> Back To Home </a>
        </div>
    </div>
    <div class="card p-10 mB-20">
        @*<p>
                <a asp-action="Create">Create New</a>
            </p>*@
        <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>
                        Sr
                    </th>
                    <th>
                        Client NAME
                    </th>
                    <th>
                        CNIC
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Balance
                    </th>
                    <th>
                        Active
                    </th>
                    <th>
                        Phone Verified
                    </th>
                    <th>
                        Email Verified
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var item in Model)
                {
                <tr>
                    <td>@(i++)</td>
                    <td>@item.Name</td>
                    <td>@item.CNIC</td>
                    <td>@(item.Phone == null || item.Phone == "" ? "--" : item.Phone)</td>
                    <td>@(item.Email == null || item.Email == "" ? "--" : item.Email)</td>
                    <td>@(item.Balance == 0 ? "0" : string.Format("{0:#,##0}", item.Balance))</td>
                    <td>
                        @if (item.isActive)
                        {
                            <i class="fa fa-check"></i>
                        }
                        else
                        {
                            <i class="fa fa-times"></i>
                        }
                    </td>
                    <td>
                        @if (item.isPhoneVerified)
                        {
                            <i class="fa fa-check"></i>
                        }
                        else
                        {
                            <i class="fa fa-times"></i>
                        }
                    </td>
                    <td>
                        @if (item.isEmailVerified)
                        {
                            <i class="fa fa-check"></i>
                        }
                        else
                        {
                            <i class="fa fa-times"></i>
                        }
                    </td>
                    <td>
                        <a href="/CustomerAccount/ViewTransactions?accountId=@item.Id"><i class="fa fa-eye"></i> View Transactions</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Modal -->
</main>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
