@model List<TFCLPortal.ClosingMonths.Dto.ClosingMonthListDto>
@{
    ViewData["Title"] = "Branches | Closed months";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}


<main class='main-content bgc-grey-100' style="padding-top:50px">
    <div class="row page-title">
        <div class="col-md-6 text-left">
            <h4 class="page-title-text">
                Branch Details
            </h4>
            <h6 class="page-title-breadcrumbs">
                <a href="~/Dashboard/Dashboard">Home</a> > Branch Details > Closed Months
            </h6>
        </div>
        <div class="col-md-6 text-right">
            @*<button class="btn btn-sm btn-outline-success" onclick="$('#filterForm').toggle();"><i class="fa fa-filter"></i> Filter Records</button>*@
            <a href="~/Dashboard/Dashboard" class="btn btn-sm btn-outline-success bg1 eft-1" title="Back"><i class="fa fa-angle-double-left"></i> Back To Home </a>
        </div>
    </div>
    <div class="card p-10 mB-20">
        <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Sr#</th>
                    <th>Branch Code</th>
                    <th>Branch Name</th>
                    <th>Closed Month</th>
                    <th>Updated On</th>
                    @if (ViewBag.Admin)
                    {
                        <th>Edit</th>
                    }
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    int i = 0;
                    foreach (var item in Model.ToList())
                    {
                        i = i + 1;
                <tr>
                    <td>@i</td>
                    <td>@item.BranchCode</td>
                    <td>@item.BranchName</td>
                    <td>@item.MonthName , @item.Year</td>
                    <td>@item.CreationTime.ToString("dd MMM yyyy")</td>
                    @if (ViewBag.Admin)
                    {
                        <td><a href="/Dashboard/updateclosingmonth?ItemId=@item.Id&&BranchId=@item.BranchId">Update</a></td>
                    }
                </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</main>

