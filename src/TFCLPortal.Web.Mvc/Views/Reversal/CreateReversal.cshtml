@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<main class='main-content bgc-grey-100' style="padding-top:50px">

    <div class="card p-10 mB-20">
        <div class="bgc-white bd bdrs-3 p-20 text-center">
            <div class="row">
                <div class="col-md-12">
                    @if (ViewBag.Success == 1)
                    {
                        <img src="~/Theame/images/icons/Tick.png" width="25%" />
                    }
                    else
                    {
                        <i class="fa fa-times text-danger" style="font-size:300px"></i> 
                    }
                </div>
                <div class="col-md-12">
                    @if (ViewBag.Success == 1)
                    {
                        <h4 class="page-title-text">
                            Reversal request is sent to BM Successfully.
                        </h4>
                    }
                    else
                    {
                <h4 class="page-title-text">
                    Some error occured while sending Reversal request to BM.
                </h4>
                    }

                </div>
            </div>
        </div>
    </div>
</main>