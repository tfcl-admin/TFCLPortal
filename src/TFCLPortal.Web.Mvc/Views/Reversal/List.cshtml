@model List<TFCLPortal.Reversals.Dto.ReversalListDto>
@{ int i = 0;}

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<!-- ### $App Screen Content ### -->
<main class='main-content bgc-grey-100' style="padding-top:50px">
    <div class="row page-title">
        <div class="col-md-6 text-left">
            <h4 class="page-title-text">
                Reversal Requests
            </h4>
            <h6 class="page-title-breadcrumbs">
                <a href="~/Dashboard/Dashboard">Home</a> > Loan Operations > Reversal Requests
            </h6>
        </div>
        <div class="col-md-6 text-right">
            @*<button class="btn btn-sm btn-outline-success" onclick="$('#filterForm').toggle();"><i class="fa fa-filter"></i> Filter Records</button>*@
            <a href="~/Dashboard/Dashboard" class="btn btn-sm btn-outline-success bg1 eft-1" title="Back"><i class="fa fa-angle-double-left"></i> Back To Home </a>
        </div>
    </div>
    <div class="card p-10 mB-20">
        @*<p>
            <a asp-action="Create">Create New</a>
        </p>*@
        <table id="dataTable" class="table table-striped table-bordered" style="text-align:center">
            <thead>
                <tr>
                    <th>
                        Sr
                    </th>
                    <th>
                        Account
                    </th>
                    <th>
                        Entered on
                    </th>
                    <th>
                        Client Id
                    </th>
                    <th>
                        APPLICANT NAME
                    </th>

                    <th>School/Business Name</th>
                    <th>Amount</th>
                    <th>Current Balance</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderByDescending(x=>x.Id))
                {
                <tr>
                    <td> @{i = i + 1;} @i</td>
                    <td>@(item.CNIC == ""||item.CNIC == null?"--":item.CNIC)</td>
                    <td>@item.CreationTime.ToString("dd MMM yyyy")</td>
                    <td>@(item.ClientId == ""||item.ClientId == null?"--":item.ClientId)</td>
                    <td>@(item.ClientName == ""||item.ClientName == null?"--":item.ClientName)</td>
                    <td>@(item.SchoolName == ""||item.SchoolName == null?"--":item.SchoolName)</td>
                    <td>@(item.Amount == 0 ? "0" : string.Format("{0:#,##0}", item.Amount))</td>
                    <td>@(item.Balance == 0 ? "0" : string.Format("{0:#,##0}", item.Balance))</td>
                    @if (item.isAuthorized == true) {
                    <td><i class="fa fa-check" title="Authorized" alt="Y"></i></td>
                    }
                    else if (item.isAuthorized == null) {
                    <td><i class="fa fa-info-circle" title="Pending" alt="P"></i></td>
                    }
                    else {
                    <td><i class="fa fa-times" title="Rejected" alt="N"></i></td>
                    }

                </tr>
                }
            </tbody>
        </table>
    </div>
