@using TFCLPortal.Web.Startup
 
@*@model TFCLPortal.Web.Models.Users.UserListViewModel*@
@model TFCLPortal.McrcRecords.Dto.CreateMcrcRecordDto
@{
    ViewBag.CurrentPageName = PageNames.Roles; // The menu item will be active for this page.
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
@section scripts
{
    <environment names="Development,Staging,Production">
        <script src="~/view-resources/Views/Roles/Index.js" asp-append-version="true"></script>
    </environment>


}


<style>
    body {
        padding: 0px !important;
    }

    .form-label {
        font-size: 11px;
        font-weight: bold;
        color: #008c45;
    }

    label {
        font-size: 11px !important;
    }

    .modal-title {
        color: #008c45;
    }
</style>

<main class='main-content bgc-grey-100' style="padding-top:50px">

    <div class="row page-title">
        <div class="col-md-6 text-left">
            <h4 class="page-title-text">Roles</h4>
            <h6 class="page-title-breadcrumbs"><a href="~/Dashboard/Dashboard">Home</a> >MC Roles</h6>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Dashboard/Dashboard" class="btn btn-sm btn-outline-success bg1 eft-1" title="Back"><i class="fa fa-angle-double-left"></i> Back To Home </a>
        </div>
    </div>

    <div class="row ">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <button type="button" class="btn btn-sm btn-outline-success bg1 eft-1 pull-right" data-toggle="modal" data-target="#RoleCreateModal" style="margin-bottom:10px">
                <i class="fa fa-plus-circle"></i> Add Roles Request
            </button>
            <div class="body table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Requester Name</th>
                            <th>Role Receiver Name</th>
                            <th>From (Date)</th>
                            <th>To (Date)</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                       <tr>
                           <td>Asif Shamsi</td>
                           <td>Salman Akram</td>
                            <td><input type="date" class="form-control col-sm-6 " disabled/></td>
                            <td><input type="date" class="form-control col-sm-6 " disabled /></td>
                           <td>Is Active</td>
                           
                       </tr>
@*                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Name</td>
                                <td>@user.FullName</td>
                                <td>

                                    <a href="#RoleEditModal" class="edit-role" data-role-id="@user.Id" data-toggle="modal" data-target="#RoleEditModal"><i class="fa fa-edit"></i> @L("Edit")</a>
                                    <a href="#" class="delete-role" data-role-id="@user.Id" data-role-name="@user.Name"><i class="fa fa-trash"></i> @L("Delete")</a>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                        }*@
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <div class="modal fade" id="RoleCreateModal" tabindex="-1" role="dialog" aria-labelledby="RoleCreateModalLabel" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">
                        <span>Add MC Role Shift</span>
                    </h4>
                </div>
                <div class="modal-body">
                    <form name="roleCreateForm" role="form" novalidate class="form-validation">

                        <div class="row ">
                            <div class="col-sm-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <label for="roleof" class="form-label">Requester Name</label>
                                       @* <input id="rolename" type="text" name="Name" required maxlength="32" minlength="2" class="validate form-control">*@
                                        <select id="RequesterId" class="form-control select2">
                                            <option value="">@User.Identity.Name</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <label for="rolename" class="form-label">Receiver Name</label>                                  
                                        @*<input id="rolename" type="text" name="Name" required maxlength="32" minlength="2" class="validate form-control">*@
                                        <select id="ReceiverName" class="form-control select2">
                                            <option value="">Roles Assigned To</option>
                                            <option value="66">Asif Shamsi</option>
                                            <option value="67">Kamran Azim</option>
                                            <option value="68">Salman Akram</option>
                                            <option value="69">Furrukh Adeel</option>
                                             
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-sm-12">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <label for="MCRoles" class="form-label">Role Name</label>
                                        <select id="MCRoles" class="form-control select2">
                                            <option value="">Role Name</option>
                                            <option value="11">MCRC</option>
                                            <option value="12">Branch Manager</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <label for="role-description" class="form-label">Role Date From:</label>
                                        <input id="roledateFrom" type="date" name="DisplayName" required maxlength="32" minlength="2" class="validate form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <label for="role-description" class="form-label">Role Date To:</label>
                                        <input id="roledateTo" type="date" name="DisplayName" required maxlength="32" minlength="2" class="validate form-control">
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="modal-footer">
                            <button type="button" disabled class="btn btn-outline-danger waves-effect" data-dismiss="modal">@L("Cancel")</button>
                            <button type="submit" disabled class="btn btn-outline-success waves-effect">@L("Save")</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="RoleEditModal" tabindex="-1" role="dialog" aria-labelledby="RoleEditModalLabel" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

            </div>
        </div>
    </div>
</main>